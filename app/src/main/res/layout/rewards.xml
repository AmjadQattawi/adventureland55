<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top App Bar with rounded corners -->
    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/rounded_card">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/left_arrows"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rewards"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Your Balance Section -->
    <TextView
        android:id="@+id/balance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Balance"
        android:textColor="#616161"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Points Circle with Border -->
    <androidx.cardview.widget.CardView
        android:id="@+id/points_circle_container"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/balance_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ellipse"
            android:padding="2dp">

            <TextView
                android:id="@+id/points_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#3F3A8A"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/points_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/points_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:textColor="#3F3A8A"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/points_value" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Redeem Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/redeem_button"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginTop="-24dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#3F3A8A"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/points_circle_container"
        app:layout_constraintStart_toStartOf="@id/points_circle_container"
        app:layout_constraintEnd_toEndOf="@id/points_circle_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeem"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

    <!-- Tabs Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#E8E7F5"
        app:layout_constraintTop_toBottomOf="@id/redeem_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/all_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#3F3A8A">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/earned_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Earned"
                android:textColor="#616161"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/spent_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spent"
                android:textColor="#616161"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Transaction History -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="60dp"
    app:layout_constraintTop_toBottomOf="@id/tabs_container"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <!-- Earned Transaction Item 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F2F2F2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <View
                    android:id="@+id/earned_indicator1"
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:background="#4CAF50"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/earned_action1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="you have earned"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/earned_indicator1" />

                <TextView
                    android:id="@+id/earned_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 Mar 2025"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/earned_action1"
                    app:layout_constraintStart_toEndOf="@id/earned_indicator1" />

                <TextView
                    android:id="@+id/earned_points1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+33"
                    android:textColor="#3F3A8A"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/earned_points_label1" />

                <TextView
                    android:id="@+id/earned_points_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Points"
                    android:textColor="#3F3A8A"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toTopOf="@id/earned_points1"
                    app:layout_constraintBottom_toBottomOf="@id/earned_points1"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Redeemed Transaction Item 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F2F2F2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <View
                    android:id="@+id/redeemed_indicator1"
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:background="#F44336"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/redeemed_action1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="you have redeemed"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/redeemed_indicator1" />

                <TextView
                    android:id="@+id/redeemed_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13 Feb 2025"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/redeemed_action1"
                    app:layout_constraintStart_toEndOf="@id/redeemed_indicator1" />

                <TextView
                    android:id="@+id/redeemed_points1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-62"
                    android:textColor="#3F3A8A"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/redeemed_points_label1" />

                <TextView
                    android:id="@+id/redeemed_points_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Points"
                    android:textColor="#3F3A8A"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toTopOf="@id/redeemed_points1"
                    app:layout_constraintBottom_toBottomOf="@id/redeemed_points1"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Earned Transaction Item 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F2F2F2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <View
                    android:id="@+id/earned_indicator2"
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:background="#4CAF50"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/earned_action2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="you have earned"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/earned_indicator2" />

                <TextView
                    android:id="@+id/earned_data2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 Feb 2025"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/earned_action2"
                    app:layout_constraintStart_toEndOf="@id/earned_indicator2" />

                <TextView
                    android:id="@+id/earned_points2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+22"
                    android:textColor="#3F3A8A"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/earned_points_label2" />

                <TextView
                    android:id="@+id/earned_points_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Points"
                    android:textColor="#3F3A8A"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toTopOf="@id/earned_points2"
                    app:layout_constraintBottom_toBottomOf="@id/earned_points2"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Redeemed Transaction Item 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F2F2F2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <View
                    android:id="@+id/redeemed_indicator2"
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:background="#F44336"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/redeemed_action2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="you have redeemed"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/redeemed_indicator2" />

                <TextView
                    android:id="@+id/redeemed_data2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 Jan 2025"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_light"
                    app:layout_constraintTop_toBottomOf="@id/redeemed_action2"
                    app:layout_constraintStart_toEndOf="@id/redeemed_indicator2" />

                <TextView
                    android:id="@+id/redeemed_points2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-45"
                    android:textColor="#3F3A8A"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/redeemed_points_label2" />

                <TextView
                    android:id="@+id/redeemed_points_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Points"
                    android:textColor="#3F3A8A"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toTopOf="@id/redeemed_points2"
                    app:layout_constraintBottom_toBottomOf="@id/redeemed_points2"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>